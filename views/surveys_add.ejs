<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Add Survey - Ella Rises</title>
    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="bg-light">

    <%- include('partials/navbar') %>

    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-header bg-white">
                        <h4 class="mb-0">Add Survey Response</h4>
                    </div>
                    <div class="card-body">
                        <form action="/surveys/add" method="POST">
                            
                            <!-- Participant & Event Selection -->
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label class="form-label">Participant</label>
                                    <select name="participant_id" class="form-select" required>
                                        <option value="">Select person...</option>
                                        <% participants.forEach(p => { %>
                                            <option value="<%= p.participant_id %>"><%= p.last_name %>, <%= p.first_name %></option>
                                        <% }) %>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Event</label>
                                    <select name="event_occurrence_id" class="form-select" required>
                                        <option value="">Select event...</option>
                                        <% events.forEach(e => { %>
                                            <option value="<%= e.event_occurrence_id %>">
                                                <%= e.event_name %> (<%= new Date(e.start_time).toLocaleDateString() %>)
                                            </option>
                                        <% }) %>
                                    </select>
                                </div>
                            </div>

                            <!-- Scores Grid -->
                            <h5 class="mt-4 mb-3 border-bottom pb-2">Scores (1-5)</h5>
                            <div class="row mb-3">
                                <div class="col-md-4">
                                    <label class="form-label">Satisfaction</label>
                                    <input type="number" name="score_satisfaction" class="form-control" min="1" max="5" required>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Usefulness</label>
                                    <input type="number" name="score_usefulness" class="form-control" min="1" max="5" required>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Instructor</label>
                                    <input type="number" name="score_instructor" class="form-control" min="1" max="5" required>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-4">
                                    <label class="form-label">Recommend (NPS)</label>
                                    <input type="number" name="score_recommendation" class="form-control" min="0" max="10" placeholder="0-10" required>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Overall</label>
                                    <input type="number" name="score_overall" class="form-control" min="1" max="5" required>
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">NPS Bucket</label>
                                    <select name="nps_bucket_id" class="form-select" required>
                                        <% npsBuckets.forEach(b => { %>
                                            <option value="<%= b.nps_bucket_id %>"><%= b.nps_bucket_name %></option>
                                        <% }) %>
                                    </select>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Comments</label>
                                <textarea name="comments" class="form-control" rows="3"></textarea>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary">Save Survey</button>
                                <a href="/surveys" class="btn btn-outline-secondary">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>