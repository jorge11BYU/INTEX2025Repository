<!-- 
Manual Survey Entry
This page is for Managers who need to enter survey data manually.
-->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <%- include('partials/head') %>
    <title>Add Survey - Ella Rises</title>
    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        /* Style radio buttons to look like the main survey */
        .form-check-input:checked {
            background-color: var(--accent-color);
            border-color: var(--accent-color);
        }
        .rating-label {
            font-weight: 600;
            margin-bottom: 0.5rem;
            display: block;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            color: #6c757d;
        }
        .score-group {
            background-color: #fff;
            padding: 15px;
            border-radius: 8px;
            border: 1px solid #eee;
            height: 100%; /* Ensures boxes in the same row match height */
        }
    </style>
</head>
<body class="bg-light">

    <%- include('partials/navbar') %>

    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-9"> <!-- Widen main container slightly to fit 2 columns comfortably -->
                <div class="card shadow border-0">
                    <div class="card-header bg-white border-bottom-0 pt-4 pb-0">
                        <h4 class="mb-0" style="color: var(--primary-color);">Add Survey Response</h4>
                    </div>
                    <div class="card-body p-4">
                        <form action="/surveys/add" method="POST">
                            
                            <!-- Step 1: Who and Where? -->
                            <div class="row mb-4">
                                <div class="col-md-6">
                                    <label class="form-label fw-bold">Participant</label>
                                    <select name="participant_id" class="form-select" required>
                                        <option value="">Select person...</option>
                                        <% participants.forEach(p => { %>
                                            <option value="<%= p.participant_id %>"><%= p.last_name %>, <%= p.first_name %></option>
                                        <% }) %>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label fw-bold">Event</label>
                                    <select name="event_occurrence_id" class="form-select" required>
                                        <option value="">Select event...</option>
                                        <% events.forEach(e => { %>
                                            <option value="<%= e.event_occurrence_id %>">
                                                <%= e.event_name %> (<%= new Date(e.start_time).toLocaleDateString() %>)
                                            </option>
                                        <% }) %>
                                    </select>
                                </div>
                            </div>

                            <h5 class="mb-3 border-bottom pb-2">Scores (1-5)</h5>
                            
                            <!-- Grid Row for Questions -->
                            <div class="row g-3 mb-3">
                                
                                <!-- Satisfaction -->
                                <div class="col-md-6">
                                    <div class="score-group">
                                        <label class="rating-label">Satisfaction</label>
                                        <div class="d-flex justify-content-between px-2">
                                            <% for(let i=1; i<=5; i++) { %>
                                                <div class="form-check text-center">
                                                    <input class="form-check-input" type="radio" name="score_satisfaction" id="sat<%=i%>" value="<%=i%>" required>
                                                    <label class="form-check-label d-block small" for="sat<%=i%>"><%=i%></label>
                                                </div>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>

                                <!-- Usefulness -->
                                <div class="col-md-6">
                                    <div class="score-group">
                                        <label class="rating-label">Usefulness</label>
                                        <div class="d-flex justify-content-between px-2">
                                            <% for(let i=1; i<=5; i++) { %>
                                                <div class="form-check text-center">
                                                    <input class="form-check-input" type="radio" name="score_usefulness" id="use<%=i%>" value="<%=i%>" required>
                                                    <label class="form-check-label d-block small" for="use<%=i%>"><%=i%></label>
                                                </div>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>

                                <!-- Instructor -->
                                <div class="col-md-6">
                                    <div class="score-group">
                                        <label class="rating-label">Instructor</label>
                                        <div class="d-flex justify-content-between px-2">
                                            <% for(let i=1; i<=5; i++) { %>
                                                <div class="form-check text-center">
                                                    <input class="form-check-input" type="radio" name="score_instructor" id="inst<%=i%>" value="<%=i%>" required>
                                                    <label class="form-check-label d-block small" for="inst<%=i%>"><%=i%></label>
                                                </div>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>

                                <!-- Recommend (NPS) -->
                                <div class="col-md-6">
                                    <div class="score-group">
                                        <label class="rating-label">Recommend (NPS)</label>
                                        <div class="d-flex justify-content-between px-2">
                                            <% for(let i=1; i<=5; i++) { %>
                                                <div class="form-check text-center">
                                                    <input class="form-check-input" type="radio" name="score_recommendation" id="rec<%=i%>" value="<%=i%>" required>
                                                    <label class="form-check-label d-block small" for="rec<%=i%>"><%=i%></label>
                                                </div>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>

                                <!-- Overall - Centered since it's the odd one out -->
                                <div class="col-md-6 mx-auto">
                                    <div class="score-group">
                                        <label class="rating-label">Overall Experience</label>
                                        <div class="d-flex justify-content-between px-2">
                                            <% for(let i=1; i<=5; i++) { %>
                                                <div class="form-check text-center">
                                                    <input class="form-check-input" type="radio" name="score_overall" id="ovr<%=i%>" value="<%=i%>" required>
                                                    <label class="form-check-label d-block small" for="ovr<%=i%>"><%=i%></label>
                                                </div>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>

                            </div> <!-- End Grid Row -->

                            <div class="mb-4 mt-4">
                                <label class="form-label fw-bold">Comments</label>
                                <textarea name="comments" class="form-control" rows="3"></textarea>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary">Save Survey</button>
                                <a href="/surveys" class="btn btn-outline-secondary">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>