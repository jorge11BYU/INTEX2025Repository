<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Dashboard - Ella Rises</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>

    <%- include('partials/navbar') %>

    <div class="container py-4">
        <h2 class="mb-4"><%= greeting %>, <%= user %>!</h2>
        <p class="text-muted">Role: <strong><%= role.toUpperCase() %></strong></p>

        <!-- Stats Cards -->
        <div class="row mb-5">
            <div class="col-md-4">
                <div class="card stat-card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-secondary">Total Participants</h5>
                        <h2 class="fw-bold"><%= stats.participants %></h2>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card stat-card shadow-sm" style="border-color: #1D3557;">
                    <div class="card-body">
                        <h5 class="card-title text-secondary">Events Hosted</h5>
                        <h2 class="fw-bold"><%= stats.events %></h2>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card stat-card shadow-sm" style="border-color: #F4A261;">
                    <div class="card-body">
                        <h5 class="card-title text-secondary">Donations</h5>
                        <h2 class="fw-bold"><%= stats.donations %></h2>
                    </div>
                </div>
            </div>
        </div>

        <!-- Chart Section -->
        <div class="card shadow-sm p-4">
            <h4>Program Impact</h4>
            <canvas id="impactChart" style="max-height: 400px;"></canvas>
        </div>
    </div>

    <script>
        // Example Chart Implementation
        const ctx = document.getElementById('impactChart').getContext('2d');
        const myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Workshop A', 'Workshop B', 'Workshop C', 'Mentorship'],
                datasets: [{
                    label: '# of Attendees',
                    data: [12, 19, 3, 5], // You can pass dynamic data here using EJS
                    backgroundColor: [
                        'rgba(230, 57, 70, 0.2)',
                        'rgba(29, 53, 87, 0.2)',
                        'rgba(244, 162, 97, 0.2)',
                        'rgba(42, 157, 143, 0.2)'
                    ],
                    borderColor: [
                        'rgba(230, 57, 70, 1)',
                        'rgba(29, 53, 87, 1)',
                        'rgba(244, 162, 97, 1)',
                        'rgba(42, 157, 143, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>