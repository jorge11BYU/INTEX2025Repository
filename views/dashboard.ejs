<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <title>Dashboard - Ella Rises</title>
    
    <style>
        /* UPDATED TABLEAU STYLES FOR FIXED WIDTH */
        .tableauPlaceholder {
            /* This ensures the container takes full available width */
            width: 100%;
            /* This adds a scrollbar if the dashboard is wider than the screen */
            overflow-x: auto;
            /* Smooth scrolling experience */
            -webkit-overflow-scrolling: touch;
        }
        
        /* We removed the '!important' width here so the JS can set a fixed pixel width */
        .tableauViz {
            margin: 0 auto; /* Centers it if the container is wider than the dash */
        }
    </style>
</head>
<body class="bg-light">

    <%- include('partials/navbar') %>

    <div class="container py-4">
        <h2 class="mb-4"><%= greeting %>, <%= user %>!</h2>
        <p class="text-muted">Role: <strong><%= role.toUpperCase() %></strong></p>

        <!-- Stats Cards -->
        <div class="row mb-5">
            <div class="col-md-4">
                <div class="card stat-card shadow-sm mb-3">
                    <div class="card-body">
                        <h5 class="card-title text-secondary">Total Participants</h5>
                        <h2 class="fw-bold"><%= stats.participants %></h2>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card stat-card shadow-sm mb-3">
                    <div class="card-body">
                        <h5 class="card-title text-secondary">Events Hosted/Attended</h5>
                        <h2 class="fw-bold"><%= stats.events %></h2>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card stat-card shadow-sm mb-3">
                    <div class="card-body">
                        <h5 class="card-title text-secondary">Donations</h5>
                        <h2 class="fw-bold"><%= stats.donations %></h2>
                    </div>
                </div>
            </div>
        </div>

        <!-- TABLEAU DASHBOARD SECTION -->
        <div class="card shadow-sm p-4 mb-5">
            <!-- Header Removed as requested -->
            
            <!-- New Tableau Embed Code (Updated ID: viz1764868703480) -->
            <div class='tableauPlaceholder' id='viz1764868703480' style='position: relative'>
                <noscript>
                    <a href='#'>
                        <img alt='Ella Rises: From Engagement to Impact ' src='https:&#47;&#47;public.tableau.com&#47;static&#47;images&#47;IN&#47;INTEXEllaRises&#47;EllaRises&#47;1_rss.png' style='border: none' />
                    </a>
                </noscript>
                <object class='tableauViz' style='display:none;'>
                    <param name='host_url' value='https%3A%2F%2Fpublic.tableau.com%2F' />
                    <param name='embed_code_version' value='3' />
                    <param name='site_root' value='' />
                    <param name='name' value='INTEXEllaRises&#47;EllaRises' />
                    <param name='tabs' value='no' />
                    <param name='toolbar' value='yes' />
                    <param name='static_image' value='https:&#47;&#47;public.tableau.com&#47;static&#47;images&#47;IN&#47;INTEXEllaRises&#47;EllaRises&#47;1.png' />
                    <param name='animate_transition' value='yes' />
                    <param name='display_static_image' value='yes' />
                    <param name='display_spinner' value='yes' />
                    <param name='display_overlay' value='yes' />
                    <param name='display_count' value='yes' />
                    <param name='language' value='en-US' />
                    <param name='filter' value='publish=yes' />
                </object>
            </div>
            
            <script type='text/javascript'>
                var divElement = document.getElementById('viz1764868703480');
                var vizElement = divElement.getElementsByTagName('object')[0];
                
                // --- FIXED SIZING LOGIC ---
                // We force the specific width/height you requested.
                // Adjusted from 1100px to 1150px
                // Adjusted from 800px to 850px
                vizElement.style.width = '1150px';
                vizElement.style.height = '850px';
                
                var scriptElement = document.createElement('script');
                scriptElement.src = 'https://public.tableau.com/javascripts/api/viz_v1.js';
                vizElement.parentNode.insertBefore(scriptElement, vizElement);
            </script>
            <!-- End Tableau Embed Code -->
            
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>