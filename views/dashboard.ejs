<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Dashboard - Ella Rises</title>
    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body class="bg-light">

    <%- include('partials/navbar') %>

    <div class="container py-4">
        <h2 class="mb-4"><%= greeting %>, <%= user %>!</h2>
        <p class="text-muted">Role: <strong><%= role.toUpperCase() %></strong></p>

        <!-- Stats Cards -->
        <div class="row mb-5">
            <div class="col-md-4">
                <!-- Removed inline style; now uses CSS theme -->
                <div class="card stat-card shadow-sm mb-3">
                    <div class="card-body">
                        <h5 class="card-title text-secondary">Total Participants</h5>
                        <h2 class="fw-bold"><%= stats.participants %></h2>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <!-- Removed inline style; now uses CSS theme -->
                <div class="card stat-card shadow-sm mb-3">
                    <div class="card-body">
                        <h5 class="card-title text-secondary">Events Hosted/Attended</h5>
                        <h2 class="fw-bold"><%= stats.events %></h2>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <!-- Removed inline style; now uses CSS theme -->
                <div class="card stat-card shadow-sm mb-3">
                    <div class="card-body">
                        <h5 class="card-title text-secondary">Donations</h5>
                        <h2 class="fw-bold"><%= stats.donations %></h2>
                    </div>
                </div>
            </div>
        </div>

        <!-- Chart Section -->
        <!-- Only show chart if Manager or Superuser (Optional: Remove if unused) -->
        <% if (role === 'manager' || user === 'superuser') { %>
        <div class="card shadow-sm p-4">
            <h4>Program Impact</h4>
            <div style="height: 400px; width: 100%;">
                <canvas id="impactChart"></canvas>
            </div>
        </div>
        <% } %>
    </div>

    <% if (role === 'manager' || user === 'superuser') { %>
    <script>
        // Static Dummy Data for visual demonstration
        const chartLabels = ['Leadership Workshop', 'Mentorship', 'Community Service', 'Annual Gala'];
        const chartDataPoints = [45, 30, 20, 60];

        const ctx = document.getElementById('impactChart').getContext('2d');
        const myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: chartLabels,
                datasets: [{
                    label: '# of Attendees',
                    data: chartDataPoints,
                    backgroundColor: 'rgba(249, 175, 177, 0.6)', /* Your Pink Accent */
                    borderColor: '#3A3F3B', /* Your Dark Grey Primary */
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: { beginAtZero: true, ticks: { stepSize: 5 } }
                }
            }
        });
    </script>
    <% } %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>