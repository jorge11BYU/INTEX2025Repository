<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Record Donation - Ella Rises</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="bg-light">

    <%- include('partials/navbar') %>

    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-header bg-white">
                        <h4 class="mb-0">Record Donation</h4>
                    </div>
                    <div class="card-body">
                        <form action="/donations/add" method="POST">
                            
                            <div class="mb-3">
                                <div class="d-flex justify-content-between">
                                    <label class="form-label">Donor (Participant)</label>
                                    <!-- Helper link: Pass 'returnTo' so the server knows where to send us back -->
                                    <a href="/participants/add?returnTo=donations_add" class="text-decoration-none small">+ Add New Person</a>
                                </div>
                                <!-- This dropdown gets populated from the 'participants' list passed by index.js -->
                                <select name="participant_id" class="form-select" required>
                                    <option value="">Select a person...</option>
                                    <% participants.forEach(p => { %>
                                        <!-- Check if this person matches the 'newParticipantId' passed from the server -->
                                        <option value="<%= p.participant_id %>" 
                                            <%= (typeof newParticipantId !== 'undefined' && newParticipantId == p.participant_id) ? 'selected' : '' %>>
                                            <%= p.last_name %>, <%= p.first_name %>
                                        </option>
                                    <% }) %>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Amount ($)</label>
                                <input type="number" step="0.01" name="donation_amount" class="form-control" placeholder="0.00" required>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Date</label>
                                <input type="date" name="donation_date" class="form-control" required>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary">Save Donation</button>
                                <a href="/donations" class="btn btn-outline-secondary">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>