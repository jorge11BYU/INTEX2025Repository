<!-- 
Surveys Page
This page lists completed survey responses.
- Managers can see who submitted the survey and edit/delete responses.
- Participants can see their own submission history.
-->
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <title>Surveys</title>
    <style>
        /* Custom Pagination Colors */
        .page-link {
            color: var(--primary-color, #198754);
        }
        .page-link:hover {
            color: var(--accent-color, #146c43);
            background-color: #f8f9fa;
        }
        .page-item.active .page-link {
            background-color: var(--primary-color, #198754);
            border-color: var(--primary-color, #198754);
            color: white;
        }
    </style>
</head>
<body class="bg-light">
    <%- include('partials/navbar') %>
    
    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2><%= isManager ? 'Survey Results' : 'My Feedback History' %></h2>
            <!-- Only managers can manually add a survey response (e.g., from paper forms) -->
            <% if (isManager) { %>
                <a href="/surveys/add" class="btn btn-success">Add Survey Response</a>
            <% } %>
        </div>

        <!-- Search Bar -->
        <form action="/surveys" method="GET" class="mb-4">
            <div class="input-group shadow-sm">
                <input type="text" name="q" class="form-control border-0" 
                       placeholder="<%= isManager ? 'Search by name, event, date, or comments...' : 'Search by event, date, or comments...' %>" 
                       value="<%= typeof query !== 'undefined' ? query : '' %>">
                <button type="submit" class="btn btn-primary px-4">Search</button>
                <% if (typeof query !== 'undefined' && query) { %>
                    <a href="/surveys" class="btn btn-secondary px-3">Clear</a>
                <% } %>
            </div>
        </form>

        <!-- Survey Table -->
        <div class="table-responsive bg-white shadow-sm p-3 rounded">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Date</th>
                        <!-- Managers see the participant name; Users just see the event -->
                        <% if (isManager) { %>
                            <th>Participant</th>
                        <% } %>
                        <th>Event</th>
                        <th class="text-center">Overall</th>
                        <th class="text-center">NPS</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (surveys.length === 0) { %>
                        <tr><td colspan="<%= isManager ? 6 : 5 %>" class="text-center text-muted py-4">No records found.</td></tr>
                    <% } %>
                    <% surveys.forEach(s => { %>
                        <tr>
                            <td><%= new Date(s.submission_date).toLocaleDateString() %></td>
                            
                            <% if (isManager) { %>
                                <td><%= s.first_name %> <%= s.last_name %></td>
                            <% } %>
                            
                            <td><strong><%= s.event_name %></strong><br><small class="text-muted"><%= new Date(s.start_time).toLocaleDateString() %></small></td>
                            <td class="text-center fw-bold"><%= s.score_overall %></td>
                            <td class="text-center"><%= s.score_recommendation %></td>
                            
                            <!-- Action Buttons -->
                            <td>
                                <!-- View Button: Available to everyone so they can read the full response -->
                                <a href="/survey/view/<%= s.survey_id %>?source=surveys" class="btn btn-sm btn-outline-secondary" title="View Answers">
                                    <i class="bi bi-eye"></i> View
                                </a>

                                <!-- Manager Buttons: Edit/Delete -->
                                <% if (isManager) { %>
                                    <a href="/surveys/edit/<%= s.survey_id %>" class="btn btn-sm btn-outline-primary">Edit</a>
                                    <form action="/surveys/delete/<%= s.survey_id %>" method="POST" style="display:inline;" onsubmit="return confirm('Delete?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                    </form>
                                <% } %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <!-- Pagination Logic -->
        <% if (totalPages > 1) { %>
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item <%= currentPage == 1 ? 'disabled' : '' %>">
                    <a class="page-link" href="/surveys?page=<%= currentPage - 1 %><%= query ? '&q=' + query : '' %>">Previous</a>
                </li>
                <li class="page-item disabled">
                    <span class="page-link text-muted">Page <%= currentPage %> of <%= totalPages %></span>
                </li>
                <li class="page-item <%= currentPage == totalPages ? 'disabled' : '' %>">
                    <a class="page-link" href="/surveys?page=<%= currentPage + 1 %><%= query ? '&q=' + query : '' %>">Next</a>
                </li>
            </ul>
        </nav>
        <% } %>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>