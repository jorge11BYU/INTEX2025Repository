<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Surveys</title>
    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
    <!-- Added Bootstrap Icons for the eye icon -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body class="bg-light">
    <%- include('partials/navbar') %>
    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <!-- Dynamic Header -->
            <h2><%= isManager ? 'Survey Results' : 'My Feedback History' %></h2>
            <% if (isManager) { %>
                <a href="/surveys/add" class="btn btn-success">Add Survey Response</a>
            <% } %>
        </div>

        <!-- SEARCH BAR -->
        <form action="/surveys" method="GET" class="mb-4">
            <div class="input-group shadow-sm">
                <!-- Dynamic Placeholder based on role -->
                <input type="text" name="q" class="form-control border-0" 
                       placeholder="<%= isManager ? 'Search by name, event, date, or comments...' : 'Search by event, date, or comments...' %>" 
                       value="<%= typeof query !== 'undefined' ? query : '' %>">
                <button type="submit" class="btn btn-primary px-4">Search</button>
                <% if (typeof query !== 'undefined' && query) { %>
                    <a href="/surveys" class="btn btn-secondary px-3">Clear</a>
                <% } %>
            </div>
        </form>

        <div class="table-responsive bg-white shadow-sm p-3 rounded">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Date</th>
                        <!-- Hide Participant column for regular users since they know who they are -->
                        <% if (isManager) { %>
                            <th>Participant</th>
                        <% } %>
                        <th>Event</th>
                        <th class="text-center">Overall</th>
                        <th class="text-center">NPS</th>
                        <!-- Actions column is now visible to everyone -->
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (surveys.length === 0) { %>
                        <tr><td colspan="<%= isManager ? 6 : 5 %>" class="text-center text-muted py-4">No records found.</td></tr>
                    <% } %>
                    <% surveys.forEach(s => { %>
                        <tr>
                            <td><%= new Date(s.submission_date).toLocaleDateString() %></td>
                            
                            <% if (isManager) { %>
                                <td><%= s.first_name %> <%= s.last_name %></td>
                            <% } %>
                            
                            <td><strong><%= s.event_name %></strong><br><small class="text-muted"><%= new Date(s.start_time).toLocaleDateString() %></small></td>
                            <td class="text-center fw-bold"><%= s.score_overall %></td>
                            <td class="text-center"><%= s.score_recommendation %></td>
                            
                            <!-- ACTIONS COLUMN -->
                            <td>
                                <!-- 1. View Button WITH SOURCE PARAMETER -->
                                <a href="/survey/view/<%= s.survey_id %>?source=surveys" class="btn btn-sm btn-outline-secondary" title="View Answers">
                                    <i class="bi bi-eye"></i> View
                                </a>

                                <!-- 2. Manager Only Buttons -->
                                <% if (isManager) { %>
                                    <a href="/surveys/edit/<%= s.survey_id %>" class="btn btn-sm btn-outline-primary">Edit</a>
                                    <form action="/surveys/delete/<%= s.survey_id %>" method="POST" style="display:inline;" onsubmit="return confirm('Delete?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                    </form>
                                <% } %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>