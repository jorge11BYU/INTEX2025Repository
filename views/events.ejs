<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <title>Events - Ella Rises</title>
</head>
<body class="bg-light">
    <%- include('partials/navbar') %>
    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <!-- Dynamic Header: Directory for Managers, My Events for Users -->
            <h2><%= isManager ? 'Event Directory' : 'My Events' %></h2>
            <% if (isManager) { %>
                <a href="/events/add" class="btn btn-success">Create Event</a>
            <% } %>
        </div>

        <!-- SEARCH BAR -->
        <form action="/events" method="GET" class="mb-4">
            <div class="input-group shadow-sm">
                <!-- Dynamic Placeholder -->
                <input type="text" name="q" class="form-control border-0" 
                       placeholder="<%= isManager ? 'Search by event name, location, or date...' : 'Search events by event name, location, or date...' %>" 
                       value="<%= typeof query !== 'undefined' ? query : '' %>">
                <button type="submit" class="btn btn-primary px-4">Search</button>
                <% if (typeof query !== 'undefined' && query) { %>
                    <a href="/events" class="btn btn-secondary px-3">Clear</a>
                <% } %>
            </div>
        </form>

        <div class="table-responsive bg-white shadow-sm p-3 rounded">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Date</th>
                        <th>Event Name</th>
                        <th>Location</th>
                        <th>Capacity</th>
                        <!-- Update Header based on Role -->
                        <th><%= isManager ? 'Actions' : 'Feedback' %></th>
                    </tr>
                </thead>
                <tbody>
                    <% if (events.length === 0) { %>
                        <tr><td colspan="5" class="text-center text-muted py-4">No records found.</td></tr>
                    <% } %>
                    <% events.forEach(e => { %>
                        <tr>
                            <!-- Displaying Date and Time -->
                            <td><%= new Date(e.start_time).toLocaleDateString() %> <%= new Date(e.start_time).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %></td>
                            <td><%= e.event_name %><br><small class="text-muted"><%= e.event_description %></small></td>
                            <td><%= e.location_name %></td>
                            <td><%= e.capacity %></td>
                            
                            <% if (isManager) { %>
                                <!-- Manager Actions -->
                                <td>
                                    <a href="/events/edit/<%= e.event_occurrence_id %>" class="btn btn-sm btn-outline-primary">Edit</a>
                                    <form action="/events/delete/<%= e.event_occurrence_id %>" method="POST" style="display:inline;" onsubmit="return confirm('Delete?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                    </form>
                                </td>
                            <% } else { %>
                                <!-- User Actions (Survey) -->
                                <td>
                                    <% if (e.survey_id) { %>
                                        <!-- LINK TO VIEW SURVEY with SOURCE=EVENTS -->
                                        <a href="/survey/view/<%= e.survey_id %>?source=events" class="btn btn-sm btn-outline-secondary">
                                            View Feedback
                                        </a>
                                    <% } else { %>
                                        <a href="/survey/<%= e.event_occurrence_id %>" class="btn btn-sm btn-outline-success">
                                            Take Survey
                                        </a>
                                    <% } %>
                                </td>
                            <% } %>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <!-- PAGINATION CONTROLS -->
        <% if (totalPages > 1) { %>
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
                <!-- PREVIOUS BUTTON -->
                <li class="page-item <%= currentPage == 1 ? 'disabled' : '' %>">
                    <a class="page-link" href="/events?page=<%= currentPage - 1 %><%= query ? '&q=' + query : '' %>" tabindex="-1">Previous</a>
                </li>
                
                <!-- PAGE INDICATOR -->
                <li class="page-item disabled">
                    <span class="page-link text-muted">Page <%= currentPage %> of <%= totalPages %></span>
                </li>

                <!-- NEXT BUTTON -->
                <li class="page-item <%= currentPage == totalPages ? 'disabled' : '' %>">
                    <a class="page-link" href="/events?page=<%= currentPage + 1 %><%= query ? '&q=' + query : '' %>">Next</a>
                </li>
            </ul>
        </nav>
        <% } %>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>