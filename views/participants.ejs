<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <%- include('partials/head') %>
    <title>Participants</title>
    <%- include('partials/head') %>
    <style>
        .profile-thumb-btn {
            cursor: pointer;
            transition: transform 0.2s;
        }
        .profile-thumb-btn:hover {
            transform: scale(1.1);
            opacity: 0.9;
            box-shadow: 0 0 8px rgba(0,0,0,0.2);
        }
    </style>
</head>
<body class="bg-light">

    <%- include('partials/navbar') %>

    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2><%= isManager ? 'Participant Directory' : 'Personal Info' %></h2>
            <% if (isManager) { %>
                <a href="/participants/add" class="btn btn-success">Add New Participant</a>
            <% } %>
        </div>

        <% if (isManager) { %>
        <form action="/participants" method="GET" class="mb-4">
            <div class="input-group shadow-sm">
                <input type="text" name="q" class="form-control border-0" placeholder="Search by name, email, or city..." value="<%= typeof query !== 'undefined' ? query : '' %>">
                <button type="submit" class="btn btn-primary px-4">Search</button>
                <% if (typeof query !== 'undefined' && query) { %>
                    <a href="/participants" class="btn btn-secondary px-3">Clear</a>
                <% } %>
            </div>
        </form>
        <% } %>

        <div class="table-responsive bg-white shadow-sm p-3 rounded">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th style="width: 80px;">Photo</th>
                        
                        <th>ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>City</th>
                        <% if (isManager) { %><th>Actions</th><% } %>
                    </tr>
                </thead>
                <tbody>
                    <% if (participants.length === 0) { %>
                        <tr><td colspan="7" class="text-center text-muted py-4">No records found.</td></tr>
                    <% } %>
                    <% participants.forEach(p => { %>
                        <tr>
                            <td>
                                <div onclick="openPhotoModal('<%= p.participant_id %>', '<%= p.profilePictureUrl || '' %>', '<%= p.first_name %>')" 
                                     class="profile-thumb-btn d-inline-block">
                                    
                                    <% if (p.profilePictureUrl) { %>
                                        <img src="<%= p.profilePictureUrl %>" 
                                             class="rounded-circle border border-2" 
                                             style="width: 50px; height: 50px; object-fit: cover;">
                                    <% } else { %>
                                        <div class="rounded-circle bg-light border border-2 d-flex justify-content-center align-items-center text-muted"
                                             style="width: 50px; height: 50px; font-weight: bold;">
                                            <%= p.first_name.charAt(0) %><%= p.last_name.charAt(0) %>
                                        </div>
                                    <% } %>
                                </div>
                            </td>

                            <td><%= p.participant_id %></td>
                            <td><%= p.first_name %></td>
                            <td><%= p.last_name %></td>
                            <td><%= p.email %></td>
                            <td><%= p.city %></td>
                            <% if (isManager) { %>
                                <td>
                                    <a href="/participants/edit/<%= p.participant_id %>" class="btn btn-sm btn-outline-primary">Edit</a>
                                    <form action="/participants/delete/<%= p.participant_id %>" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                    </form>
                                </td>
                            <% } %>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <!-- PAGINATION CONTROLS -->
        <% if (isManager && totalPages > 1) { %>
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item <%= currentPage == 1 ? 'disabled' : '' %>">
                    <a class="page-link" href="/participants?page=<%= currentPage - 1 %><%= query ? '&q=' + query : '' %>">Previous</a>
                </li>
                <li class="page-item disabled">
                    <span class="page-link text-muted">Page <%= currentPage %> of <%= totalPages %></span>
                </li>
                <li class="page-item <%= currentPage == totalPages ? 'disabled' : '' %>">
                    <a class="page-link" href="/participants?page=<%= currentPage + 1 %><%= query ? '&q=' + query : '' %>">Next</a>
                </li>
            </ul>
        </nav>
        <% } %>

    </div>

    <div class="modal fade" id="photoModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Manage Profile Photo</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center">
                    
                    <div class="mb-4">
                        <img id="modalPreviewImg" src="" class="rounded-circle shadow-sm border" style="width: 150px; height: 150px; object-fit: cover; display: none;">
                        
                        <div id="modalPreviewPlaceholder" class="rounded-circle bg-light border justify-content-center align-items-center mx-auto" style="width: 150px; height: 150px; font-size: 3rem; display: none;">
                            ?
                        </div>
                        
                        <h5 class="mt-3" id="modalParticipantName">Name</h5>
                    </div>

                    <form action="/participants/upload-image" method="POST" enctype="multipart/form-data" class="mb-3">
                        <input type="hidden" name="participant_id" id="uploadParticipantId">
                        
                        <label class="form-label fw-bold text-primary">Change Photo</label>
                        <div class="input-group">
                            <input type="file" name="profile_pic" class="form-control" accept="image/*" required>
                            <button type="submit" class="btn btn-primary">Upload</button>
                        </div>
                    </form>

                    <form action="/participants/delete-image" method="POST" id="deleteForm" style="display: none;">
                        <input type="hidden" name="participant_id" id="deleteParticipantId">
                        <hr>
                        <button type="submit" class="btn btn-outline-danger w-100" onclick="return confirm('Remove this photo?')">Remove Current Photo</button>
                    </form>

                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        function openPhotoModal(id, currentUrl, name) {
            // 1. Setup IDs
            document.getElementById('uploadParticipantId').value = id;
            document.getElementById('deleteParticipantId').value = id;
            document.getElementById('modalParticipantName').textContent = name;

            const imgPreview = document.getElementById('modalPreviewImg');
            const placeholder = document.getElementById('modalPreviewPlaceholder');
            const deleteForm = document.getElementById('deleteForm');

            if (currentUrl) {
                // CASE A: User HAS a photo
                imgPreview.src = currentUrl;
                imgPreview.style.display = 'inline-block';
                
                // Completely hide placeholder
                placeholder.style.display = 'none';
                placeholder.classList.remove('d-flex'); 
                
                deleteForm.style.display = 'block'; 
            } else {
                // CASE B: User has NO photo
                imgPreview.style.display = 'none';
                
                // Show placeholder (and add d-flex so it centers the text)
                placeholder.style.display = 'flex';
                placeholder.classList.add('d-flex');
                placeholder.innerText = name.charAt(0);
                
                deleteForm.style.display = 'none'; 
            }

            const myModal = new bootstrap.Modal(document.getElementById('photoModal'));
            myModal.show();
        }
    </script>
</body>
</html>