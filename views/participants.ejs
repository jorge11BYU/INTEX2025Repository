<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Participants</title>
    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="bg-light">
    <%- include('partials/navbar') %>
    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <!-- Dynamic Header: Directory for Managers, Personal Info for Users -->
            <h2><%= isManager ? 'Participant Directory' : 'Personal Info' %></h2>
            <% if (isManager) { %>
                <a href="/participants/add" class="btn btn-success">Add New Participant</a>
            <% } %>
        </div>

        <!-- SEARCH BAR (Manager Only) -->
        <% if (isManager) { %>
        <form action="/participants" method="GET" class="mb-4">
            <div class="input-group shadow-sm">
                <input type="text" name="q" class="form-control border-0" placeholder="Search by name, email, or city..." value="<%= typeof query !== 'undefined' ? query : '' %>">
                <button type="submit" class="btn btn-primary px-4">Search</button>
                <% if (typeof query !== 'undefined' && query) { %>
                    <a href="/participants" class="btn btn-secondary px-3">Clear</a>
                <% } %>
            </div>
        </form>
        <% } %>

        <div class="table-responsive bg-white shadow-sm p-3 rounded">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>City</th>
                        <% if (isManager) { %><th>Actions</th><% } %>
                    </tr>
                </thead>
                <tbody>
                    <% if (participants.length === 0) { %>
                        <tr><td colspan="6" class="text-center text-muted py-4">No records found matching your search.</td></tr>
                    <% } %>
                    <% participants.forEach(p => { %>
                        <tr>
                            <td><%= p.participant_id %></td>
                            <td><%= p.first_name %></td>
                            <td><%= p.last_name %></td>
                            <td><%= p.email %></td>
                            <td><%= p.city %></td>
                            <% if (isManager) { %>
                                <td>
                                    <a href="/participants/edit/<%= p.participant_id %>" class="btn btn-sm btn-outline-primary">Edit</a>
                                    <form action="/participants/delete/<%= p.participant_id %>" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                    </form>
                                </td>
                            <% } %>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>