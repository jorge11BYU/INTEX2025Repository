<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Participants</title>
    <%- include('partials/head') %>
    <style>
        /* Make the table image look interactive */
        .profile-thumb-btn {
            cursor: pointer;
            transition: transform 0.2s, opacity 0.2s;
        }
        .profile-thumb-btn:hover {
            transform: scale(1.1);
            opacity: 0.8;
            border-color: var(--primary-color) !important;
        }
    </style>
</head>
<body class="bg-light">
    <%- include('partials/navbar') %>
    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2><%= isManager ? 'Participant Directory' : 'Personal Info' %></h2>
            <% if (isManager) { %>
                <a href="/participants/add" class="btn btn-success">Add New Participant</a>
            <% } %>
        </div>

        <% if (isManager) { %>
        <form action="/participants" method="GET" class="mb-4">
            <div class="input-group shadow-sm">
                <input type="text" name="q" class="form-control border-0" placeholder="Search by name, email, or city..." value="<%= typeof query !== 'undefined' ? query : '' %>">
                <button type="submit" class="btn btn-primary px-4">Search</button>
                <% if (typeof query !== 'undefined' && query) { %>
                    <a href="/participants" class="btn btn-secondary px-3">Clear</a>
                <% } %>
            </div>
        </form>
        <% } %>

        <div class="table-responsive bg-white shadow-sm p-3 rounded">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th style="width: 80px;">Photo</th>
                        
                        <th>ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>City</th>
                        <% if (isManager) { %><th>Actions</th><% } %>
                    </tr>
                </thead>
                <tbody>
                    <% if (participants.length === 0) { %>
                        <tr><td colspan="7" class="text-center text-muted py-4">No records found matching your search.</td></tr>
                    <% } %>
                    <% participants.forEach(p => { %>
                        <tr>
                            <td>
                                <form action="/participants/upload-image" method="POST" enctype="multipart/form-data" id="form-<%= p.participant_id %>">
                                    
                                    <input type="hidden" name="participant_id" value="<%= p.participant_id %>">
                                    
                                    <input type="file" name="profile_pic" id="file-<%= p.participant_id %>" style="display: none;" accept="image/*" onchange="document.getElementById('form-<%= p.participant_id %>').submit()">
                                    
                                    <% if (p.profilePictureUrl) { %>
                                        <img src="<%= p.profilePictureUrl %>" 
                                             class="rounded-circle border border-2 profile-thumb-btn" 
                                             style="width: 50px; height: 50px; object-fit: cover;"
                                             onclick="document.getElementById('file-<%= p.participant_id %>').click()"
                                             title="Click to change photo">
                                    <% } else { %>
                                        <div class="rounded-circle bg-light border border-2 d-flex justify-content-center align-items-center profile-thumb-btn"
                                             style="width: 50px; height: 50px; font-weight: bold; color: #aaa;"
                                             onclick="document.getElementById('file-<%= p.participant_id %>').click()"
                                             title="Click to upload photo">
                                            <%= p.first_name.charAt(0) %><%= p.last_name.charAt(0) %>
                                        </div>
                                    <% } %>
                                </form>
                            </td>

                            <td><%= p.participant_id %></td>
                            <td><%= p.first_name %></td>
                            <td><%= p.last_name %></td>
                            <td><%= p.email %></td>
                            <td><%= p.city %></td>
                            <% if (isManager) { %>
                                <td>
                                    <a href="/participants/edit/<%= p.participant_id %>" class="btn btn-sm btn-outline-primary">Edit</a>
                                    <form action="/participants/delete/<%= p.participant_id %>" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                    </form>
                                </td>
                            <% } %>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>