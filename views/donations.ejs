<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Donations</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="bg-light">
    <%- include('partials/navbar') %>
    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Donation History</h2>
            <% if (isManager) { %>
                <a href="/donations/add" class="btn btn-success">Record New Donation</a>
            <% } %>
        </div>
        <div class="table-responsive bg-white shadow-sm p-3 rounded">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Date</th>
                        <th>Donor Name</th>
                        <th>Amount</th>
                        <% if (isManager) { %><th>Actions</th><% } %>
                    </tr>
                </thead>
                <tbody>
                    <% donations.forEach(d => { %>
                        <tr>
                            <td><%= new Date(d.donation_date).toLocaleDateString() %></td>
                            <td><%= d.first_name %> <%= d.last_name %></td>
                            <td class="fw-bold text-success">$<%= d.donation_amount %></td>
                            <% if (isManager) { %>
                                <td>
                                    <a href="/donations/edit/<%= d.donation_id %>" class="btn btn-sm btn-outline-primary">Edit</a>
                                    <form action="/donations/delete/<%= d.donation_id %>" method="POST" style="display:inline;" onsubmit="return confirm('Delete?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                    </form>
                                </td>
                            <% } %>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>